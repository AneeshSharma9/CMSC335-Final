<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather Dashboard</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: <%= gradient %>;
            color: white;
            display: flex;
            height: 100vh;
        }

        .content {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

        .search-bar {
            width: 50%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: none;
        }

        .search-button {
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .current-weather {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #1e293b;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .moon-card {
            display: flex;
            width: 30%;
            justify-content: space-between;
            align-items: center;
            background: #1e293b;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .moon-icon {
            font-size: 8em;
            filter: grayscale(100%);
        }

        .forecast {
            margin-top: 20px;
            margin-bottom: 20px;
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 20px;
        }

        .forecast-card {
            background: #1e293b;
            padding: 10px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        h1, h2, h3 {
            margin: 0;
        }

        .temperature {
            margin-top:30px;
            margin-bottom:15px;
            font-size: 3em;
        }

        .icon {
            font-size: 8em;
        }

        .details {
            display: flex;
            flex-direction: column;
        }

        .forecast-card .icon {
            font-size: 4em;
        }

        .day {
            font-size: 1.2em;
            margin-bottom: 5px;
        }

        #animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .snow #animation::before,
        .snow #animation::after {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://www.animationsoftware7.com/img/agifs/snow02.gif') repeat center center / cover;
            z-index: 1;
            opacity: 0.4;
        }

        .rain #animation::before,
        .rain #animation::after {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://i.pinimg.com/originals/91/95/f4/9195f4dd1b69f90038f627c8af422429.gif') repeat center center / cover;
            z-index: 1;
            opacity: 0.1;
        }
    </style>
</head>

<body>
    <div id="animation"></div>
    <div class="content">
        <form action="/weather" method="GET">
            <input type="text" class="search-bar" name="location" placeholder="Search for city/zipcode"
                list="previous-searches" required>
            <datalist id="previous-searches">
                <% previousSearches.forEach(search=> { %>
                    <option value="<%= search %>"></option>
                    <% }); %>
            </datalist>
            <button class="search-button" type="submit">Check Weather</button>
        </form>

        <div class="current-weather">
            <div class="details">
                <h1>
                    <%= city %>, <%= state %>
                </h1>
                <div class="temperature">
                    <%= temperature %>&deg;
                </div>
                <div>
                    <%= description %>
                </div>
            </div>
            <div class="icon">
                <%- currentEmoji %>
            </div>
        </div>

        <h2>7-Day Forecast</h2>
        <div class="forecast">
            <% forecast.forEach(day=> { %>
                <div class="forecast-card">
                    <div class="day"><%= day.date %></div>
                    <div class="icon"><%- day.emoji %></div>
                    <div><%= day.high %>&deg; | <%= day.low %>&deg;</div>
                    <div><%= day.condition %></div>
                </div>
            <% }); %>
        </div>

        <div class="moon-card">
            <div class="details">
                <h1><%= moonPhase %></h1>
                <p>Illumination: <%= moonIllumination %></p>
            </div>
            <div class="icon moon-icon" id="moon-icon">
                <%- moonEmoji %>
            </div>
        </div>
    </div>
    <script>
        const description = "<%= description.toLowerCase() %>";

        if (description.includes("snow")) {
            document.body.classList.add("snow");
        } else if (description.includes("rain")) {
            document.body.classList.add("rain");
        }
    </script>
</body>

</html>